<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="24dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/name"
            android:singleLine="true"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Early Grade Numeracy Quiz"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:typeface="serif"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/Next"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Start Quiz"
            android:textSize="15sp"
            android:typeface="serif"
            android:textStyle="italic"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_q0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:typeface="serif"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/text_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 + 2 = "
                android:textStyle="bold"
                android:textSize="20sp"
                android:typeface="serif"
                android:textAlignment="center"
                android:layout_below="@id/text_q0"
                android:layout_marginBottom="16dp"/>

            <RadioGroup
                android:id="@+id/icon_group1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#abf234"
                android:layout_below="@id/text_q1"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="16dp"
                >

                <RadioButton
                    android:id="@+id/radio1_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 - Four"
                    android:paddingLeft="16dp"
                    />

                <RadioButton
                    android:id="@+id/radio1_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 - Five"
                    android:paddingLeft="16dp"/>

                <RadioButton
                    android:id="@+id/radio1_q3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3- Three"
                    android:paddingLeft="16dp"
                    />

                <RadioButton
                    android:id="@+id/radio1_q4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2- Two"
                    android:paddingLeft="16dp"
                    />
            </RadioGroup>

            <TextView
                android:id="@+id/text_q20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 2:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:typeface="serif"
                android:textAlignment="center"
                android:layout_below="@id/icon_group1"
                />
            <TextView
                android:id="@+id/text_q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 + 1= "
                android:textStyle="bold"
                android:textSize="20sp"
                android:typeface="serif"
                android:textAlignment="center"
                android:layout_below="@+id/text_q20"
                android:paddingLeft="16dp"/>
            <RadioGroup
                android:id="@+id/icon_group2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#abf234"
                android:layout_below="@id/text_q2"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="16dp"
                >
                <RadioButton
                    android:id="@+id/radio2_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4 - Four"
                    android:paddingLeft="16dp"
                    />

                <RadioButton
                    android:id="@+id/radio2_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3 - Three"
                    android:paddingLeft="16dp"
                    />
                <RadioButton
                    android:id="@+id/radio2_q3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6 - Six"
                    android:paddingLeft="16dp"
                    />

                <RadioButton
                    android:id="@+id/radio2_q4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5 - Five"
                    android:paddingLeft="16dp"
                    />
            </RadioGroup>
            <TextView
                android:id="@+id/text_q03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 3:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:typeface="serif"
                android:textAlignment="center"
                android:layout_below="@id/icon_group2"
                />
            <TextView
                android:id="@+id/text_q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 + 3= "
                android:textStyle="bold"
                android:textSize="20sp"
                android:typeface="serif"
                android:textAlignment="center"
                android:layout_below="@+id/text_q03"
                android:paddingLeft="16dp"
                />

            <RadioGroup
                android:id="@+id/icon_group3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_q3"
                android:background="#abf234"
                android:paddingLeft="16dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="16dp"
                >
                <RadioButton
                    android:id="@+id/radio3_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7 - Seven"
                    android:paddingLeft="16dp"
                    />

                <RadioButton
                    android:id="@+id/radio3_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6 - Six"
                    android:paddingLeft="16dp"
                    />
                <RadioButton
                    android:id="@+id/radio3_q3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5 - Five"
                    android:paddingLeft="16dp"
                    />

                <RadioButton
                    android:id="@+id/radio3_q4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8 - Eight"
                    android:paddingLeft="16dp"
                    />
            </RadioGroup>
            <TextView
                android:id="@+id/text_q04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 4:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:typeface="serif"
                android:textAlignment="center"
                android:layout_below="@+id/icon_group3"
                />
            <TextView
                android:id="@+id/text_q4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 + 5= "
                android:textStyle="bold"
                android:textSize="20sp"
                android:typeface="serif"
                android:textAlignment="center"
                android:layout_below="@+id/text_q04" />
            <RadioGroup
                android:id="@+id/icon_group4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_q4"
                android:background="#abf234"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="30dp"
                >
                <RadioButton
                    android:id="@+id/radio4_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7 - Seven"
                    android:paddingLeft="16dp"
                    />

                <RadioButton
                    android:id="@+id/radio4_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6 - Six"
                    android:paddingLeft="16dp"
                    />
                <RadioButton
                    android:id="@+id/radio4_q3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="9 - Nine"
                    android:paddingLeft="16dp"
                    />

                <RadioButton
                    android:id="@+id/radio4_q4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:layout_weight="1"
                    android:text="8 - Eight"
                    />
            </RadioGroup>
            <TextView
                android:id="@+id/text_q05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 5:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:typeface="serif"
                android:textAlignment="center"
                android:layout_below="@id/icon_group4"
                />
            <TextView
                android:id="@+id/text_q5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 + 2= "
                android:textStyle="bold"
                android:textSize="20sp"
                android:typeface="serif"
                android:textAlignment="center"
                android:layout_below="@+id/text_q05"
                />
            <RadioGroup
                android:id="@+id/icon_group5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_q5"
                android:background="#abf234"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="30dp"
                >

                <RadioButton
                    android:id="@+id/radio5_q1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:layout_weight="1"
                    android:text="5 - FIve"
                    />

                <RadioButton
                    android:id="@+id/radio5_q2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6 - Six"
                    android:paddingLeft="16dp"
                    />
                <RadioButton
                    android:id="@+id/radio5_q3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7 - Seven"
                    android:paddingLeft="16dp"
                    />

                <RadioButton
                    android:id="@+id/radio5_q4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    android:text="8 - Eight"
                    />
            </RadioGroup>
        </RelativeLayout>

        <Button
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:onClick="submitOrder"
            android:text="Submit" />

    </LinearLayout>
</ScrollView>



